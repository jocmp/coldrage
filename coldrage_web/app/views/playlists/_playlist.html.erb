<%- Playlists::PlaylistView.new(playlist).tap do |view| %>
  <li class="list">
    <div>
      <%= link_to view.playlist_name, playlist_path(view.spotify_id) %>
      <ol>
      <% view.playlist_tracks.each do |track| %>
        <li>
          <%= track.name %>
        </li>
      <% end %>
      </ol>
    </div>
  </li>
<% end %>
