<p id="notice"><%= notice %></p>

<h1>Watchers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @watchers.each do |watcher| %>
      <tr>
        <td><%= watcher.playlist.name %> by <%= watcher.playlist.owner.display_name %></td>
        <td><%= link_to 'Show', watcher_backups_path(watcher) %></td>
        <td><%= link_to "Open in Spotify", watcher.playlist.external_urls["spotify"] %>
        <td><%= link_to 'Destroy', watcher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Watcher', new_watcher_path %>
